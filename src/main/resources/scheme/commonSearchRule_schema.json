{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "CommonSearchRule",
  "description": "validate commonSearchRule",
  "type": "object",
  "properties": {
    "type": {
      "description": "Type of the SearchRule",
      "type": "string",
      "enum": [
        "Button",
        "Text",
        "Checkbox",
        "Image",
        "Datepicker",
        "Fileinput",
        "Input",
        "Label",
        "Link",
        "Textarea",
        "Textfield",
        "Radiobuttons",
        "Selector",
        "Tabs",
        "Textlist",
        "Checklist",
        "Elements"
      ]
    },
    "uniqueness": {
      "description": "Name of the attribute which must be unique",
      "type": "string",
      "messages": {
        "required": "Should be at least ${schema} years, ${data} years is too young."
      }
    },
    "selector": {
      "type": "object",
      "properties": {
        "type": {
          "description": "Type of the selector",
          "type": "string",
          "enum": [
            "xpath",
            "css"
          ]
        },
        "value": {
          "description": "Value of the selector",
          "type": "string"
        }
      },
      "required": [
        "type",
        "value"
      ]
    }
  },
  "required": [
    "type",
    "uniqueness",
    "selector"
  ]
}